<Window x:Class="HahuczkijYalunin322.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HahuczkijYalunin322"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="images/задание.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="58,26,0,0" ToolTip="Изображение математической функции" Height="115" Width="397"/>
        <Label Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="79,141,0,0" ToolTip="Поле для ввода значения x"/>
        <TextBox x:Name="X" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,150,0,0" Width="100" ToolTip="Введите значение x"/>
        <Label Content="y" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="79,164,0,0" ToolTip="Поле для ввода значения y"/>
        <TextBox x:Name="Y" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,173,0,0" Width="100" ToolTip="Введите значение y"/>
        <Label Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="58,254,0,0" ToolTip="Поле для отображения результата"/>
        <TextBox x:Name="Result" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,258,0,0" Width="100" IsReadOnly="True" ToolTip="Результат вычисления" RenderTransformOrigin="0.488,0.045"/>
        <RadioButton x:Name="shx" Content="sh(x)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,196,0,0" GroupName="Function" ToolTip="Выбор функции sh(x)"/>
        <RadioButton x:Name="x2" Content="x^2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,216,0,0" GroupName="Function" ToolTip="Выбор функции x^2"/>
        <RadioButton x:Name="ex" Content="e^x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,236,0,0" GroupName="Function" ToolTip="Выбор функции e^x"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="209,216,0,0" Click="Button_Click" ToolTip="Вычислить значение функции"/>
        <Button Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="209,243,0,0" Click="Button_Click_1" ToolTip="Очистить все поля" Width="63"/>
    </Grid>
</Window>
